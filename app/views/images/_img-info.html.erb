<div class="js-tags">
  <span>Title: <strong><%= image.title %></strong></span> |
  <span><%= link_to 'To Image', image_path(image) %></span> |
  <span>Tags: </span>
  <% image.tag_list.each do |tag| %>
    <span> <%= link_to content_tag(:strong, "#{tag}", class:['js-tag-class']), images_path(tag: tag) %></span>
  <% end %> |
  <span><%= link_to 'Delete', image_path(image), method: :delete, data: {confirm: "Are you sure to delete image with id #{image.id}"}, class: 'js-delete-btn' %></span>
</div>
